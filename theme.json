{
    "version": 1,
    "settings": {
        "layout": {
            "contentSize": "710px",
            "wideSize": "1200px"
        },
        "border": {
            "customColor": true,
            "customRadius": true,
            "customStyle": true,
            "customWidth": true
        },
        "color": {
            "custom": true,
            "customGradient": true,
            "link": true,
            "duotone": [],
            "gradients": [],
            "palette": [
                {
                    "slug": "black",
                    "color": "#1D1D1D",
                    "name": "Black"
                },
                {
                    "slug": "white",
                    "color": "#FFFFFF",
                    "name": "White"
                },
                {
                    "slug": "red",
                    "color": "#D33939",
                    "name": "Red"
                },
                {
                    "slug": "light-gray",
                    "color": "#767676",
                    "name": "Light Gray"
                },
                {
                    "slug": "coconut-white",
                    "color": "#F7F7F7",
                    "name": "Coconut White"
                }
            ]
        },
        "custom": {
            "baseFont": 18,
            "contentSize": "710px",
            "containerSize": "1200px",
            "fontFamily": {
                "primary": "var(--wp--preset--font-family--lato)",
                "secondary": "var(--wp--preset--font-family--libre-baskerville)"
            },
            "lineHeight": {
                "small": 1.2,
                "heading": 1.4,
                "body": 1.55
            },
            "fontWeight": {
                "normal": 400,
                "bold": 500,
                "bolder": 700
            },
            "spacing": {
                "small": "10px",
                "medium": "20px",
                "large": "30px",
                "row": "60px",
                "section": "90px"
            },
            "outline": "1px dotted var(--wp--preset--color--black)",
            "border": "2px solid var(--wp--preset--color--red)",
            "color": {
                "primaryButtonHover": "#b12c2c",
                "secondaryButtonHover": "#474747"
            },
            "mobile": {
                "fontSize": {
                    "gigantic": "26px",
                    "huge": "24px",
                    "extraLarge": "22px",
                    "large": "20px",
                    "medium": "18px",
                    "normal": "18px",
                    "small": "16px"
                },
                "spacing": {
                    "small": "8px",
                    "medium": "12px",
                    "large": "18px",
                    "row": "20px",
                    "section": "25px"
                }
            }
        },
        "typography": {
            "customFontSize": true,
            "customFontStyle": true,
            "customFontWeight": true,
            "customLineHeight": true,
            "dropCap": true,
            "fontFamilies": [
                {
                    "fontFamily": "-apple-system,BlinkMacSystemFont,\"Segoe UI\",Roboto,Oxygen-Sans,Ubuntu,Cantarell,\"Helvetica Neue\",sans-serif",
                    "slug": "system-font",
                    "name": "System Font"
                },
                {
                    "fontFamily": "Lato, sans-serif",
                    "slug": "lato",
                    "name": "Lato"
                },
                {
                    "fontFamily": "Libre Baskerville, serif",
                    "slug": "libre-baskerville",
                    "name": "Libre Baskerville"
                }
            ],
            "fontSizes": [
                {
                    "slug": "gigantic",
                    "size": "42px",
                    "name": "Gigantic"
                },
                {
                    "slug": "very-huge",
                    "size": "38px",
                    "name": "Very Huge"
                },
                {
                    "slug": "huge",
                    "size": "34px",
                    "name": "Huge"
                },
                {
                    "slug": "extra-large",
                    "size": "30px",
                    "name": "Extra Large"
                },
                {
                    "slug": "large",
                    "size": "24px",
                    "name": "Large"
                },
                {
                    "slug": "medium",
                    "size": "20px",
                    "name": "Medium"
                },
                {
                    "slug": "normal",
                    "size": "18px",
                    "name": "Normal"
                },
                {
                    "slug": "small",
                    "size": "16px",
                    "name": "Small"
                }
            ]
        },
        "spacing": {
            "customMargin": true,
            "customPadding": true,
            "units": [ "px", "em", "rem", "%", "vw", "vh" ]
        },
        "blocks": {
            "core/paragraph": {
                "border": {},
                "color": {},
                "custom": {},
                "layout": {},
                "spacing": {
                    "customMargin": true
                }
            },
            "core/heading": {
                "spacing": {
                    "customMargin": true
                }
            },
            "core/group": {
                "spacing": {
                    "customMargin": true,
                    "customMPadding": true
                }
            }
        }
    },
    "styles": {
        "color": {
            "text": "var(--wp--preset--color--black)",
            "background": "var(--wp--preset--color--coconut-white)"
        },
        "typography": {
            "fontSize": "var(--wp--preset--font-size--normal)",
            "lineHeight": "var(--wp--custom--line-height--body)"
        },
        "elements": {
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--red)"
                },
                "typography": {
                    "textDecoration": "underline"
                }
            },
            "h1": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--gigantic)",
                    "lineHeight": "var(--wp--custom--line-height--heading)",
                    "fontWeight": "var(--wp--custom--font-weight--normal)"
                }
            },
            "h2": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--huge)",
                    "lineHeight": "var(--wp--custom--line-height--heading)",
                    "fontWeight": "var(--wp--custom--font-weight--normal)"
                }
            },
            "h3": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--extra-large)",
                    "lineHeight": "var(--wp--custom--line-height--heading)",
                    "fontWeight": "var(--wp--custom--font-weight--normal)"
                }
            },
            "h4": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--large)",
                    "lineHeight": "var(--wp--custom--line-height--heading)",
                    "fontWeight": "var(--wp--custom--font-weight--normal)"
                }
            },
            "h5": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--medium)",
                    "lineHeight": "var(--wp--custom--line-height--heading)",
                    "fontWeight": "var(--wp--custom--font-weight--normal)"
                }
            },
            "h6": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--normal)",
                    "lineHeight": "var(--wp--custom--line-height--heading)",
                    "fontWeight": "var(--wp--custom--font-weight--normal)"
                }
            }
        },
        "blocks": {
            "core/post-title": {
                "color": {
                    "text": "var(--wp--preset--color--black)"
                },
                "elements": {
                    "link": {
                        "color": {
                            "text": "var(--wp--preset--color--black)"
                        },
                        "typography": {
                            "textDecoration": "none"
                        }
                    }
                }
            },
            "core/post-featured-image": {
                "spacing": {
                    "margin": {
                        "top": "var(--wp--custom--spacing--large)",
                        "bottom": "var(--wp--custom--spacing--large)"
                    }
                }
            },
            "core/post-content": {
            },
            "core/post-comments": {
                "spacing": {
                    "margin": {
                        "bottom": "var(--wp--custom--spacing--section)"
                    }
                }
            },
            "core/heading": {
                "typography": {
                    "fontFamily": "var(--wp--custom--font-family--secondary)"
                },
                "spacing": {
                    "margin": {
                        "top": "0.7em",
                        "bottom": "0.7em"
                    }
                }
            },
            "core/button": {
                "border": {
                    "radius": "0px"
                },
                "color": {
                    "background": "var(--wp--preset--color--red)",
                    "text": "var(--wp--preset--color--white)"
                },
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--normal)"
                },
                "spacing": {
                    "padding": {
                        "top": "0.7em",
                        "bottom": "0.7em",
                        "left": "1.2em",
                        "right": "1.2em"
                    }
                }
            },
            "core/quote": {
                "border": {
                    "color": "var(--wp--preset--color--red)",
                    "width": "3px"
                },
                "spacing": {
                    "padding": {
                        "left": "var(--wp--custom--spacing--large)"
                    }
                },
                "typography": {
                    "fontStyle": "italic"
                }
            },
            "core/post-navigation-link": {
                "spacing": {
                    "margin": {
                        "top": "var(--wp--custom--spacing--small)",
                        "bottom": "var(--wp--custom--spacing--small)"
                    }
                }
            },
            "core/query-pagination": {
                "spacing": {
                    "margin": {
                        "top": "var(--wp--custom--spacing--large)",
                        "bottom": "var(--wp--custom--spacing--large)"
                    }
                }
            }
        }
    },
    "templateParts": [
        {
            "name": "Header",
            "area": "header"
        },
        {
            "name": "Footer",
            "area": "footer"
        },
        {
            "name": "Sidebar",
            "area": "sidebar"
        }
    ],
    "customTemplates": [
        {
            "name": "single-sidebar",
            "title": "Single Page with sidebar",
            "postTypes": [
                "page",
                "post"
            ]
        }
    ]
}